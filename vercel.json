{
    "version": 2,
    "builds": [
        {
            "src": "src/vercel_deploy.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/vercel_deploy.py"
        }
    ],
    "crons": [
        {
            "path": "/api/cron-scrape",
            "schedule": "0 17 * * *"
        },
        {
            "path": "/api/cron-llm",
            "schedule": "2 17 * * *"
        },
        {
            "path": "/api/cron-email",
            "schedule": "7 17 * * *"
        }
    ]
}